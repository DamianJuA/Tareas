public class computadora {
    private String marca;
    private String modelo;
    private int ram;

    public computadora(String marca, String modelo, int ram) {
        this.marca = marca;
        this.modelo = modelo;
        this.ram = ram;
    }

    public String getMarca() {
        return marca;
    }

    public void setMarca(String marca) {
        this.marca = marca;
    }

    public String getModelo() {
        return modelo;
    }

    public void setModelo(String modelo) {
        this.modelo = modelo;
    }

    public int getRam() {
        return ram;
    }

    public void setRam(int ram) {
        this.ram = ram;
    }

    @Override
    public String toString() {
        return "computadora{" +
                "marca='" + marca + '\'' +
                ", modelo='" + modelo + '\'' +
                ", ram=" + ram +
                '}';
    }
    public void encender() {
        System.out.println("La computadora se está encendiendo...");
        System.out.println("Bienvenido/a, por favor ingrese su contraseña.");
    }

    public void aumentarRam(int incremento) {
        ram += incremento;
        System.out.println("La RAM de la computadora ha sido aumentada a " + ram + "GB.");
    }
}
